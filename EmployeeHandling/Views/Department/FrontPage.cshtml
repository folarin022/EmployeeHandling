@model IEnumerable<EmployeeHandling.Dto.DepartmentModel.DepartmentDto>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Departments</h2>
        <a class="btn btn-success" href="@Url.Action("Create", "Department")">
            <i class="bi bi-plus-circle"></i> Create Department
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle mb-0 bg-white">
            <thead class="table-dark">
                <tr>
                    <th scope="col">S/N</th>
                    <th scope="col">Department Name</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int counter = 1;
                    foreach (var dept in Model)
                    {
                        <tr>
                            <th scope="row">@counter</th>
                            <td>@dept.Name</td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-warning me-1" href="@Url.Action("Edit", "Department", new { id = dept.Id })">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <form asp-action="Delete" asp-controller="Department" method="post" style="display:inline;"
                                      onsubmit="return confirmDelete('@dept.Name')">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@dept.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        counter++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No departments found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f7ff;
    }

    .btn i {
        margin-right: 4px;
    }

    .container {
        max-width: 900px;
    }
</style>

@section Scripts {
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <script>
        function confirmDelete(departmentName) {
            return confirm(`Are you sure you want to delete the department "${departmentName}"?`);
        }
    </script>
}
