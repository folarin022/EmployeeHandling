@model IEnumerable<EmployeeHandling.Dto.EmployeeModel.>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Employee Directory</h2>
        <a class="btn btn-success shadow-sm" asp-action="CreateEmployee" asp-controller="Employee">
            <i class="bi bi-plus-circle"></i> Add New Employee
        </a>
    </div>

    <div class="card shadow-lg rounded">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 bg-white">
                    <thead class="table-dark sticky-top">
                        <tr>
                            <th scope="col" style="width: 50px;">S/N</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Address</th>
                            <th scope="col">Department</th>
                            <th scope="col" class="text-center" style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int counter = 1;
                            foreach (var emp in Model)
                            {
                                <tr class="table-row-hover">
                                    <th scope="row">@counter</th>
                                    <td>@emp.FirstName</td>
                                    <td>@emp.LastName</td>
                                    <td>@emp.Email</td>
                                    <td>@emp.PhoneNumber</td>
                                    <td>@emp.Address</td>
                                    <td>@emp.DepartmentName</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-1">

                                            <a class="btn btn-sm btn-info text-white" asp-action="DetailsEmployee" asp-route-id="@emp.Id" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            <a class="btn btn-sm btn-warning" asp-action="EditEmployee" asp-route-id="@emp.Id" title="Edit Employee">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>

                                            <form asp-action="DeleteEmployee" asp-controller="Employee" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@emp.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');" title="Delete Employee">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4 text-muted">
                                    <i class="bi bi-info-circle fs-4 d-block mb-1"></i>
                                    No employees found in the system.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr.table-row-hover:hover {
        background-color: #f1f7ff;
        cursor: pointer;
    }

    .btn i {
        margin-right: 0;
    }

    .container {
        max-width: 1100px;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
