@model IEnumerable<EmployeeHandling.Dto.EmployeeModel.EmployeeResponseDto>

@{
    ViewData["Title"] = "Employee";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Employees</h2>
        <a class="btn btn-success" href="@Url.Action("CreateEmployee", "Employee")">
            <i class="bi bi-plus-circle"></i> Create Employee
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle mb-0 bg-white">
            <thead class="table-dark">
                <tr>
                    <th scope="col">S/N</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col">Department</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int counter = 1;
                    foreach (var emp in Model)
                    {
                        <tr>
                            <th scope="row">@counter</th>
                            <td>@emp.FirstName</td>
                            <td>@emp.LastName</td>
                            <td>@emp.Email</td>
                            <td>@emp.PhoneNumber</td>
                            <td>@emp.Address</td>
                            <td>@emp.DepartmentName</td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-warning me-1" href="@Url.Action("Edit", "Employee", new { id = emp.Id })">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-controller="Employee" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@emp.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        counter++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">No employees found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f7ff;
    }

    .btn i {
        margin-right: 4px;
    }

    .container {
        max-width: 1000px;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
